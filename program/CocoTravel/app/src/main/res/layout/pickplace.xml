<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTop10"
        android:layout_width="450dp"
        android:layout_height="246dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/street2" />

    <ImageView
        android:id="@+id/imgCloseToYou"
        android:layout_width="441dp"
        android:layout_height="242dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTop10"
        app:srcCompat="@drawable/pagoda" />

    <ImageView
        android:id="@+id/imgSGS"
        android:layout_width="439dp"
        android:layout_height="247dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCloseToYou"
        app:srcCompat="@drawable/landmark3" />

    <TextView
        android:id="@+id/txtTop10Place"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="92dp"
        android:text="Top 10 "
        android:fontFamily="serif"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTop10" />

    <TextView
        android:id="@+id/txtSGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:fontFamily="serif"
        android:text="Saigonese Suggestion"
        android:textColor="#FDFDFD"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCloseToYou" />

    <TextView
        android:id="@+id/txtCloseToYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="92dp"
        android:text="Close To You"
        android:fontFamily="serif"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCloseToYou" />

</androidx.constraintlayout.widget.ConstraintLayout>